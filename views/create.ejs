<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Add Product</title>
    <link rel="stylesheet" href='/css/global.css'>
    <link rel="stylesheet" href='/css/create.css'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <% var rootPath = '../'; %>
    <%- include(rootPath + 'public/components/nav.html'); %>

    <section id="add-product" class="flex centered column">
      <div class="add-product-container flex centered column rounded embosed wrap" data-aos="fade-up" data-aos-duration="500">
        <div class="hero flex centered">
          <h2>Add product</h2>
        </div>
        
        <form action="/addProduct" method="POST" enctype="multipart/form-data">
          <label for="name">Product name</label><br />
          <input
            type="text"
            id="name"
            name="name"
            class="textInput"
            placeholder="Enter your product Name"
            required
          />
          <br />
          <label for="description">Product Description</label><br />
          <input
            type="text"
            name="description"
            class="textInput"
            placeholder="Tell us a little bit about your Product"
            required
          />
          <br />
          <label for="stock">Stock </label><br />
          <input
            type="number"
            name="stock"
            class="textInput"
            required
          />
          <br />
          <label for="price">Price</label><br />
          <input
            type="number"
            name="price"
            class="textInput"
            placeholder="0"
          />
          <br/>
          <input
            type="file"
            name="uploaded_file"              
          />
          <br /><br />
          <input class="button" type="submit" value="Submit" />
        </form>
        <form action="/" method="GET">
          <input class="button" type="submit" value="Cancel" />
        </form>
      </div>
    </section>

    <%- include(rootPath + 'public/components/footer.html'); %>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="/scripts/script.js"></script>
  </body>
</html>